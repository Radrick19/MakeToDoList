<Window x:Name="root"
    x:Class="ToDoList.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList"
        xmlns:vm="clr-namespace:ToDoList.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
 
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>
        <ListBox Grid.Row="1" Width="auto" ItemsSource="{Binding ToDoCollection}" ItemTemplate="{StaticResource TaskItem}"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,0">
            <TextBox Text="{Binding TaskText, Mode=TwoWay}" MinWidth="150" Height="50" FontSize="18" VerticalContentAlignment="Center" Padding="10"/>
            <Button Command="{Binding AddItem}" Height="35" Width="35" Content="Add" Margin="10,0"/>
        </StackPanel>
    </Grid>
</Window>
