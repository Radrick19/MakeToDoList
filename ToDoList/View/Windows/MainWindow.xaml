<Window x:Name="root"
        x:Class="ToDoList.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList"
        xmlns:vm="clr-namespace:ToDoList.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
 
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="ToDo List" FontSize="40" Margin="10,0"/>
        <ListBox Margin="20,0,20,0" Grid.Row="1" Width="auto" ItemsSource="{Binding ToDoCollection}" ItemTemplate="{StaticResource TaskItem}"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,0">
            <TextBox Text="{Binding TaskText, Mode=TwoWay}" MinWidth="200" Height="40" FontSize="18" VerticalContentAlignment="Center" Padding="5">
            </TextBox>
            <Button Command="{Binding AddItem}" Height="35" Width="120" Content="Add ToDo Item" Margin="10,0" Background="#17a2b8" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
